					System.out.print("to : ");
					String to = br.readLine().toUpperCase();
					//convert(amount,from,to);
					break;
				case 2:
					//add()
					break;
				case 3:
					//view()
					break;
				case 4:
					//update()
					break;
				case 5:
					//show()
					break;
				case 6:
					System.out.println("program terminated .... status 0");
					System.exit(0);
					break;
				default:
					System.out.println("Invalid Input!!");
					break;
			}
		}

	}

}
